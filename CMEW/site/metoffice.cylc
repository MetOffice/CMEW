# metoffice.cylc
[runtime]
    [[root]]
        [[[environment]]]
            INSTITUTION_ID="MOHC"

    [[COMPUTE]]
        platform = spice
        [[[directives]]]
            --wckey = CMEW
            --ntasks = {{ MAX_PARALLEL_TASKS }}

    [[run_recipe<recipe=radiation_budget>]]
        execution time limit = PT2H
        [[[directives]]]
            --mem = 3G

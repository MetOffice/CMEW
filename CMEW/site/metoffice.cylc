#!jinja2
# metoffice.cylc
[runtime]
    [[root]]
        [[[environment]]]
            INSTITUTION_ID="MOHC"
    [[COMPUTE]]
        platform = spice
        [[[directives]]]
            --wckey = CMEW
            --ntasks = {{ MAX_PARALLEL_TASKS }}

    [[process<assessment_area=radiation_budget>]]
        [[[directives]]]
            --time = 2
            --mem = 3G
